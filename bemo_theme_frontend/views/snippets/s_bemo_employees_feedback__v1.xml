<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_employees_feedback__v1" name="Bemo: Employees Feedback Version 01">
        <section class="employees-feedback">
            <div class="container">
                <h2 class="bemo-title text-center">Employees’s Feedback</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <img src="/bemo_theme_frontend/static/src/images/employees_feedback.png" alt="Employees-Feedback"/>
                    </div>
                    <div class="col-lg-6">
                        <div class="block-form">
                            <form action="/submit_feedback" method="post">
                                <div class="form-group">
                                    <input type="text" id="title" name="title" class="form-control" placeholder="Nhập chủ đề feedback"/>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" id="description" name="description" rows="8" placeholder="Nhập feedback của bạn"></textarea>
                                </div>
                                <div class="form-group text-right">
                                    <button type="submit" class="btn btn-primary">Gửi đi</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>