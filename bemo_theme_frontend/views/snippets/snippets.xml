<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="place_into_bar" inherit_id="website.snippets" name="Bemo place into bar">
        <xpath expr="//div[@id='snippet_custom']" position="before">
            <div id="snippet_bemo" class="o_panel">
                <div class="o_panel_header">Bemo Snippet</div>
                <div class="o_panel_body">
                    <!-- BEMO HERO BANNER -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_hero_banner__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_hero_banner__v1.svg">
                        <keywords>bemo slider hero banner, slider hero banner</keywords>
                    </t>
                    <!-- BEMO BANNER TITLE PAGE -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_banner_title_page__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_banner_title_page__v1.svg">
                        <keywords>bemo banner title page, banner title page</keywords>
                    </t>
                    <!-- BEMO COMPANY INTENTION -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_company_intention__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_company_intention__v1.svg">
                        <keywords>bemo banner company intention, company intention</keywords>
                    </t>
                    <!-- BEMO SLIDE ITEM (HOME NEWS) -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_home_news__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_home_news__v1.svg">
                        <keywords>bemo slider items home news, slider items home news</keywords>
                    </t>
                    <!-- BEMO SLIDE NOTIFICATION -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_notification__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_notification__v1.svg">
                        <keywords>bemo slider notification, slider notification</keywords>
                    </t>
                    <!-- BEMO EMPLOYESS FEEDBACK -->
                    <t t-snippet="bemo_theme_frontend.s_employees_feedback__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_employees_feedback__v1.svg">
                        <keywords>bemo employees feedback, employees feedback</keywords>
                    </t>
                    <!-- BEMO EMPLOYESS FEEDBACK -->
                    <t t-snippet="bemo_theme_frontend.s_bemo_packages__v1" t-thumbnail="/bemo_theme_frontend/static/src/images/snippets_thumbs/s_bemo_packages__v1.svg">
                        <keywords>bemo packages, packages</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>