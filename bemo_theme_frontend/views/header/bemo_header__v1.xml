<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bemo_header__v1" inherit_id="website.layout" name="BEMO: Header Template Version 01">
        <xpath expr="//header" position="replace">
            <!-- *** HEADER *** //-->
            <header class="bemo-main-header">
                <div class="container">
                    <div class="bemo-main-header-main">
                        <div class="button-open-nav-sidebar-wrapper">
                            <div class="button-open-nav-sidebar">
                                <i class="fa fa-bars"></i>
                                <span class="txt">Menu</span>
                            </div>
                        </div>
                        <nav class="bemo-primary-nav">
                            <div class="button-close-nav-sidebar-wrapper">
                                <div class="button-close-nav-sidebar">
                                    <span class="txt">Đóng</span>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <ul>
                                <li class="has-sub">
                                    <a href="#">Ứng dụng</a>
                                </li>
                                <li class="has-sub">
                                    <a href="#">Cộng đồng</a>
                                </li>
                                <li>
                                    <a href="#">Giá cả</a>
                                </li>
                            </ul>
                        </nav>
                        <a class="bemo-logo-main-header" href="/web">
                            <img src="/bemo_theme_frontend/static/src/images/logo_bemo_company_default.png" alt="LOGO-BAP"/>
                        </a>
                        <div class="bemo-header-login-wrapper">
                            <t t-set="is_connected" t-value="not user_id._is_public()"/>
                            <t t-if="is_connected">
                                <div t-attf-class="account">
                                    <a role="button" data-toggle="dropdown" t-attf-class="dropdown-toggle">
                                        <img t-att-src="'/bemo_theme_frontend/static/src/images/avatar_user_default.png'" t-attf-class="account_avatar"/>
                                        <span t-attf-class="account_name">Tài khoản của bạn</span>
                                    </a>
                                    <div t-attf-class="dropdown-menu js_usermenu" role="menu">
                                        <div id="o_logout_divider" class="dropdown-divider"/>
                                        <a t-attf-href="/web/session/logout?redirect=/" role="menuitem" id="o_logout" class="dropdown-item">Logout</a>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <a t-attf-class="btn btn-login" t-attf-href="/web/login">
                                    <span>Đăng nhập</span>
                                </a>
                            </t>
                        </div>
                    </div>
                </div>
            </header>
        </xpath>
    </template>
</odoo>