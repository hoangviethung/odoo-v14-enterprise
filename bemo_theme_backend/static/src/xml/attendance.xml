<?xml version="1.0" encoding="UTF-8"?>

<template id="bemo_attendance" xml:space="preserve">
    <t t-name="HrAttendanceMyMainMenu" t-extend="HrAttendanceMyMainMenu">
        <t t-jquery='.o_hr_attendance_kiosk_mode_container' t-operation='replace'>
            <!-- HTML CHANCE HERE ! -->
            <div class="bemo_hr_attendance_kiosk_mode_container">
                <span class="o_hr_attendance_kiosk_backdrop"/>
                <div class="o_hr_attendance_clock text-center"/>
                <div class="bemo_hr_attendance_kiosk_mode">
                    <t t-set="checked_in" t-value="widget.employee.attendance_state=='checked_in'"/>
                    <t t-if="widget.employee">
                        <div class="bemo_hr_attendance_logo_company">
                            <img t-attf-src="{{widget.company_image_url}}" alt="Company Logo"/>
                        </div>
                        <div class="bemo_hr_attendance_time">
                            <t t-if="!checked_in">
                                <span>Hôm nay, Thứ 2 - 12/04/2021, hiện tại là: <b>09:23:00 AM</b>
                                </span>
                            </t>
                            <t t-else="">
                                <span>Today's work hours: <b t-esc="widget.hours_today"/>
                                </span>
                            </t>
                        </div>
                        <div class="bemo_hr_attendance_kiosk_mode_wrapper">
                            <div class="bemo_hr_attendance_employee">
                                <div class="bemo_hr_attendance_user_avatar">
                                    <img t-attf-src="/web/image?model=hr.employee&amp;field=image_128&amp;id=#{widget.employee.id}" t-att-title="widget.employee.name" t-att-alt="widget.employee.name"/>
                                </div>
                                <div class="bemo_hr_attendance_user_information">
                                    <h1 class="bemo_hr_attendance_user_name">
                                        <span>Hello,</span>
                                        <t t-esc="widget.employee.name"/>
                                    </h1>
                                    <b>
                                        <t t-if="!checked_in">Want to Check in?</t>
                                        <t t-else="">Want to Check out?</t>
                                    </b>
                                </div>
                            </div>
                            <div class="bemo_hr_attendance_buttons">
                                <a class="o_hr_attendance_sign_in_out_icon o_hr_attendance_sign_in" t-if="!checked_in" aria-label="Check in" title="Check in">
                                    <i class="fa fa-sign-in"></i>
                                </a>
                                <a class="o_hr_attendance_sign_in_out_icon o_hr_attendance_sign_out" t-if="checked_in" aria-label="Check out" title="Check out">
                                    <i class="fa fa-sign-out"></i>
                                </a>
                                <span>
									Click to <span t-if="checked_in">Check out</span>
                                    <span t-if="!checked_in">Check in</span>
                                </span>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="bemo_hr_attendance_kiosk_mode_warning">
                            <span>Warning : Your user should be linked to an employee to use attendance. Please contact your administrator.</span>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </t>
</template>