			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/control_panel.scss"/>
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/mail__messaging_menu.scss"/>
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/web_enterprise__webclient.scss"/>
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/web_enterprise__webclient_layout.scss"/>
		</xpath>
	</template>
	<!-- *  -->
	<template id="assets_common" inherit_id="web.assets_common">
		<xpath expr="." position="inside">
			<!-- SCSS -->
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/navbar.scss"/>
			<!-- JS -->
			<script type="text/javascript" src="/bemo_theme/static/src/js/custom.js"></script>
		</xpath>
	</template>
