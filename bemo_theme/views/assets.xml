			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/variables.scss"/>
		</xpath>
	</template>
	<!-- *  -->
	<template id="assets_backend" inherit_id="web.assets_backend">
		<xpath expr="." position="inside">
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/buttons.scss"/>
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/search_view.scss"/>
			<link rel="stylesheet" type="text/scss" href="/bemo_theme/static/src/scss/kanban_view.scss"/>
