<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="employees_feedback" name="BEMO: Employees Feedback">
        <section class="employees-feedback">
            <div class="container">
                <h2 class="bemo-title text-center">Employees’s Feedback</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <img src="/bap_website_login/static/src/images/employees_feedback.png" alt="Employees-Feedback"/>
                    </div>
                    <div class="col-lg-6">
                        <div class="block-form">
                            <form action="#">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Nhập chủ đề feedback"/>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" rows="8" placeholder="Nhập feedback của bạn"></textarea>
                                </div>
                                <div class="form-group text-right">
                                    <button type="button" class="btn btn-primary">Gửi đi</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>