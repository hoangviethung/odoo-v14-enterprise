<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="login_layout" inherit_id="web.login_layout" name="BAP: Login Layout Inherit">
		<xpath expr="//t[@t-set='body_classname']" position="after">
			<t t-set="body_classname" t-value="''"/>
		</xpath>

		<xpath expr="//t[@t-set='no_footer']" position="attributes">
			<attribute name="t-value">False</attribute>
		</xpath>

		<div class="container py-5" position="replace">
			<section class="hvh-login" t-attf-style="background-image: url('#{default_background_src}'); height: unset !important; padding-bottom: 56px;">
				<div class="container h-100">
					<div class="row no-gutters h-100 align-items-center">
						<div class="loign-wrapper col-12">
							<div class="row no-gutters">
								<div class="col-lg-6">
									<div class="wrapper-say-hi" t-attf-style="background-image: url('#{in_form_background_src}');">
										<h1>Hi!!</h1>
										<p>Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing industries for previewing layouts and visual mockups.</p>
									</div>
								</div>
								<div class="col-lg-6">
									<section class="hvh-form-login">
										<h3>Sign in</h3>
										<h5>Access and manage your instances from this BAP Account.</h5>
										<t t-raw="0"/>
									</section>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<!-- *** PAGE VERIFY TEMPLATE *** //-->
			<input id="page-verify-template" hidden="hidden" current-page="login-page" header-inverted="true" is-login="false"/>
			<!-- *** OVERLAY *** //-->
			<div id="overlay"/>
			<!-- *** JS *** //-->
			<!--            <script type="text/javascript" src="/bap_website_login/static/src/js/core.min.js"/>-->
			<!--            <script type="text/javascript" src="/bap_website_login/static/src/js/main.min.js"/>-->
		</div>
	</template>

	<template id="login" inherit_id="web.login" name="BAP: Login Inherit">
		<xpath expr="//form" position="replace">
			<!-- TODO: This class: "oe_login_form" has JS in Odoo, be carefully !!! -->
			<form role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash" autocomplete="off">
				<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
				<div class="form-row">
					<div class="form-group col-lg-12">
						<label class="col-form-label" for="login">Email</label>
						<input class="form-control" type="email" name="login" t-att-value="login" id="login" placeholder="Email ..." required="required" autofocus="autofocus" autocapitalize="off"/>
						<span class="invalid-feedback">Retype Email ...</span>
					</div>
					<div class="form-group col-lg-12">
						<label class="col-form-label" for="password">Password</label>
						<input class="form-control" type="password" name="password" id="password" placeholder="Password ..." required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
						<span class="invalid-feedback">Retype Password ...</span>
					</div>
					<p class="alert alert-danger" t-if="error" role="alert">
						<t t-esc="error"/>
					</p>
					<p class="alert alert-success" t-if="message" role="status">
						<t t-esc="message"/>
					</p>
					<div class="buttons-form col-lg-12">
						<button type="submit" class="btn btn-lg btn-primary"><span>Log in</span></button>
						<div class="o_login_auth"/>
					</div>
					<div class="forget-password col-lg-12"><a href="#">Forgot password?</a></div>
				</div>
			</form>
		</xpath>
	</template>

</odoo>
