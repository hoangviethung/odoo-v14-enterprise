<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LAYOUT HOMEPAGE -->
    <template id="bemo_homepage" inherit_id="website.homepage" name="BEMO: Home Inherit">
        <xpath expr="//div[@id='wrap']" position="inside">
            <t t-call="bap_website_login.bemo_hero_banner"/>
            <t t-call="bap_website_login.bemo_notification"/>
            <t t-call="bap_website_login.bemo_company_intention"/>
            <t t-call="bap_website_login.bemo_home_news"/>
            <t t-call="bap_website_login.employees_feedback"/>
            <!-- *** PAGE VERIFY TEMPLATE *** //-->
            <input id="page-verify-template" hidden="hidden" current-page="home-page" header-inverted="false"/>
        </xpath>
    </template>
</odoo>